@model PizzaWorld.Client.Models.StoreViewModel

<h1>Store Home Page for Store: @Model.SelectedStoreName</h1>
<div class="container">
    <div class = "row">
        <div class = "col-3">
            <div class="card-deck">
                <div class="card text-center">
                    <div class="card-body justify-content-center align-self-center">
                        <h5 class="card-title">Check Order History</h5>
                        <p class="card-text"></p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Store" asp-action="GetStoreHistory">Order History</a>
                    </div>
                </div>
            </div>
        </div>
  

        
    
  </div>
</div>