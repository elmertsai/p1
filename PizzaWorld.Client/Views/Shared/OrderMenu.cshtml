@model PizzaWorld.Client.Models.OrderViewModel

@{
  ViewBag.Title = "Order - Menu";
  Layout = "_Layout";
  TempData.Put("PizzaList",Model.PizzaViews);
}

<section>
  <h2>Welcome to Store @TempData.Peek("StoreName") !</h2>
</section>

<div class="container">
    <div class = "row">
        <div class = "col">
            <div class="card-deck">
                <div class="card text-center">
                    <img class="card-img-top" src="https://media.discordapp.net/attachments/796065919935840276/800856792552439819/Prebuilt_Pizza.png" 
                    style="width:100%;height:50%;" alt="Prebuilt Pizza">
                    <div class="card-body justify-content-center align-self-center">
                        <h5 class="card-title">Choose a Prebuilt Pizza</h5>
                        <p class="card-text"></p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="OrderPrebuiltPizza">Prebuilt Pizza</a>
                    </div>
                </div>
                <div class="card text-center" >
                    <img class="card-img-top" src="https://media.discordapp.net/attachments/796065919935840276/800856795509817424/CustomPizza.png?width=1663&height=936" 
                    style="width:100%;height:50%;" alt="Custom Pizza">
                    <div class="card-body justify-content-center align-self-center">
                        <h5 class="card-title">Make a Custom Pizza</h5>
                        <p class="card-text"></p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="OrderCustomPizza">Custom Pizza</a>
                    </div>
                </div>
                <div class="card text-center">
                    <img class="card-img-top" src="https://media.discordapp.net/attachments/796065919935840276/800856825305366588/CheckMark.png" 
                    style="width:100%;height:50%;" alt="Check Out">
                    <div class="card-body justify-content-center align-self-center">
                        <h5 class="card-title">Check Out</h5>
                        <p class="card-text"></p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="OrderComplete">Check Out</a>
                    </div>
                </div>
                <div class="card text-center">
                    <img class="card-img-top" src="https://cdn.discordapp.com/attachments/796065919935840276/800931987996278864/kisspng-portable-network-graphics-computer-icons-vector-gr-clock-png-transparent-images-pictures-pho.png" 
                    style="width:100%;height:50%;" alt="Order History">
                    <div class="card-body justify-content-center align-self-center">
                        <h5 class="card-title">Check Order History</h5>
                        <p class="card-text"></p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Customer" asp-action="CustomerOrderHistory">Order History</a>
                    </div>
                </div>
            </div>
        </div>
  @* <div class="row row-equal-height" > *@
    
        <div class = "col-3">
            @Html.Partial("OrderReview",Model)
        </div>

        
    
  </div>
</div>


